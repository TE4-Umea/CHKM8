extends dash
block head
    link(rel="stylesheet", href="css/dashboard.css")
block header 
    div(id="time-container")
        span(id="time") --:--
        div(id="seconds-bar-container")
            div(id="seconds-bar")
block sidebar
    div(id="projects")
        div(class="project")
           
    span(id="add-new-project" title="Create new project" onclick="new_project()") +


block content
    div(id="top-bar")
        div(id="logged-in-as")
        a(href='https://slack.com/oauth/authorize?scope=identity.basic,identity.email,identity.team,identity.avatar&client_id=' + client_id id="slack-button")
        button(id="check-in-button" onclick="check_in()") Check in  
        img(src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=", alt="Profile" id="avatar" title="Profile settings")
    span(hidden id="slack-sign-token") #{token}
    div(id="history-wrapper")
        canvas(id="history" width="700" height="400")

block modal
    div(id="modal")
        input(id="modal-add-member" type="text")
        button(id="modal-add-member-button") Add member
        input(id="modal-remove-member" type="text")
        button(id="modal-remove-member-button") Remove member
        button(id="modal-delete-project-button") Delete project
    

block scripts
    script(src="js/dashboard.js")